<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.mapper.contact">
	<insert id="insert" parameterType="com.gdu.app11.dto.ContactDto">
	INSERT INTO CONTACT_T(CONTACT_NO, NAME, TEL, EMAIL, ADDRESS, CREATED_AT) VALUES(CONTACT_SEQ.NEXTVAL, ?, ?, ?, ?, TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS'))
	</insert>
	
 	<update id-"update" parameterType="com.gdu.app11.dto.ContactDto">
 	UPDATE CONTACT_T SET NAME = ?, TEL = ?, EMAIL = ?, ADDRESS = ? WHERE CONTACT_NO = ?
 	</update>
 	
 	<delete id="delete" parameterType="int">
 	DELETE FROM CONTACT_T WHERE CONTACT_NO = ?
 	</delete>
  
	<select id="selectList" resultType="com.gdu.app11.dto.ContactDto">
	SELECT CONTACT_NO, NAME, TEL, EMAIL, ADDRESS, CREATED_AT FROM CONTACT_T ORDER BY CONTACT_NO ASC
	</select>
	
	<select id="selectContactByNo" parameterType="int" resultType="com.gdu.app11.dto.ContactDto">
	SELECT CONTACT_NO, NAME, TEL, EMAIL, ADDRESS, CREATED_AT FROM CONTACT_T WHERE CONTACT_NO = ?
	</select>
</mapper>